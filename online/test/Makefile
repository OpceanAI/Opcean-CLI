.PHONY: install run

REPO_URL=https://github.com/OpceanAI/Archan-Open-source-
PKG_DIR=Archan-Open-source-

install:
	@echo "ğŸ¾ Clonando el repositorio..."
	@git clone $(REPO_URL) $(PKG_DIR) || echo "âœ” Repo ya existe"
	@echo "ğŸ³ Creando .env..."
	@cd $(PKG_DIR) && touch .env
	@echo "ğŸ³ Construyendo y levantando Docker..."
	@cd $(PKG_DIR) && docker-compose up --build -d
	@cd $(PKG_DIR) && docker-compose down --volumes
	@echo "âœ… InstalaciÃ³n completada (imagen guardada, contenedores borrados)"

run:
	@cd $(PKG_DIR) && docker-compose up -d

run-local:
	@echo "ğŸ¾ Ejecutando en local (sin Docker)..."
	# aÃ±ade instrucciones para su ejecucion en local